! ~/.Xresources
!
! always source ~/.profile
XTerm*loginShell:true
! colours
XTerm*termName:xterm-256color
XTerm*background:black
XTerm*foreground:white
! fonts
XTerm*font:xft:Inconsolata:pixelsize=16
XTerm*faceName:xft:Inconsolata:pixelsize=16
XTerm*faceNameDoublesize:xft:Noto Sans Mono CJK JP:pixelsize=12:style=Regular
XTerm*antialias:true
! copy/paste
XTerm*selectToClipboard:true
XTerm.VT100.translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)
! misc
XTerm*ScrollBar:false
