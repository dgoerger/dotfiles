# ~/.gitconfig, see git-config(1)

[advice]
	skippedCherryPicks = false
[alias]
	blames = !tig blame
	branches = branch -av
	contributors = shortlog -ens --no-merges
	maint = maintenance run --task=gc --task=commit-graph --task=incremental-repack
	reflogs = !git reflog --pretty=raw | tig --pretty=raw
	remotes = remote get-url --all origin
	st = status --branch --porcelain
	submods = submodule update --init --recursive
	tags = tag -l
	upload = !/usr/local/libexec/gerrit_uploader.sh
	upstream = rev-parse --symbolic-full-name @{u}
	worktrees = worktree list
[apply]
	whitespace = fix
[branch]
	autosetuprebase = always
	sort = -committerdate
[color]
	ui = auto
[core]
	commentString = "‚ÅÇ"
	fsmonitor = true
	notesRef = refs/notes/review
[diff]
	algorithm = histogram
	colorMoved = dimmed-zebra
	colorMovedWS = ignore-all-space
	noprefix = true
	renameLimit = 100000
[feature]
	manyFiles = true
[fetch]
	prune = true
[grep]
	lineNumber = true
	patternType = extended
[init]
	defaultBranch = main
[log]
	date = iso8601
[merge]
	conflictstyle = diff3
[mergetool]
	prompt = false
[pull]
	rebase = true
[push]
	default = simple
[rebase]
	autoSquash = true
	autoStash = true
	missingCommitsCheck = warn
	updateRefs = true
[rerere]
	enabled = true
