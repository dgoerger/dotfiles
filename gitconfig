# ~/.gitconfig, see git-config(1)

[alias]
	branches = branch -av
	contributors = shortlog -ens
	remotes = remote get-url --all origin
	st = status --branch --porcelain
	sub = submodule update --init --recursive
	tags = tag -l
	worktrees = worktree list
[apply]
	whitespace = fix
[branch]
	autosetuprebase = always
	sort = -committerdate
[color]
	ui = auto
[diff]
	algorithm = histogram
[grep]
	lineNumber = true
	patternType = extended
[init]
	defaultBranch = main
[log]
	date = iso8601
[mergetool]
	prompt = false
[push]
	default = simple
[rebase]
	autoSquash = true
