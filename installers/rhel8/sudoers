# CentOS: /etc/sudoers, see sudoers(5)

# refuse to run if unable to disable echo on the tty
Defaults   !visiblepw

Defaults    env_reset
Defaults    env_keep =  "DISPLAY PS1 PS2 USERNAME LANG LC_ALL"

Defaults    secure_path = /sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin

## allow root to run any commands anywhere
root ALL=(ALL) ALL

## don't lock out default admin group "wheel"
%wheel ALL=(ALL) ALL

# to work around restrictive umask for mortals
Defaults umask_override
Defaults umask = 0022

# ref: http://www.openwall.com/lists/oss-security/2018/06/12/2
Defaults use_pty
# use the root password instead of the user's password
Defaults rootpw

# by default, sudo timeout is 5 minutes - change to 30 minutes
Defaults timestamp_timeout = 30
