# ~/.cwmrc
#
# newly-launched applications "stick" with the current group
sticky yes
# st > xterm
bind-key CM-Return "/usr/bin/env ENV=${HOME}/.profile /usr/local/bin/st"
# www - Chrome uses pledge(2) and unveil(2) - Firefox doesn't use unveil(2) (yet)
bind-key CMS-w "/usr/local/bin/chrome --incognito --enable-unveil"
# emulate tiling
bind-key CMS-v window-vtile
# shortcut compatibility with GNOME3 and other window managers
bind-key 4-l "/usr/X11R6/bin/xlock"
bind-key CM-Up group-rcycle
bind-key CM-Down group-cycle
# quickly switch between groups / virtual desktops
bind-key M-1 group-only-1
bind-key M-2 group-only-2
bind-key M-3 group-only-3
bind-key M-4 group-only-4
bind-key M-5 group-only-5
bind-key M-6 group-only-6
bind-key M-7 group-only-7
bind-key M-8 group-only-8
bind-key M-9 group-only-9
