# ~/.cwmrc
#
# newly-launched applications "stick" with the current group/workspace
sticky yes
# builtin command definitions and overrides
command lock /usr/X11R6/bin/xlock
command term /usr/local/bin/st
# application bindings
bind-key CMS-w /usr/local/bin/firefox
# emulate tiling
bind-key CMS-v window-vtile
bind-key 4-Up window-fullscreen
bind-key 4-Down window-fullscreen
bind-key 4-Left window-snap-left
bind-key 4-Right window-snap-right
# shortcut compatibility with GNOME3 and other window managers
bind-key 4-l lock
bind-key 4-a menu-window
bind-key CM-Up group-rcycle
bind-key CM-Down group-cycle
# volume control
bind-key SM-equal '/usr/bin/mixerctl outputs.master=+5,+5'
bind-key M-equal '/usr/bin/mixerctl outputs.master=+5,+5'
bind-key M-minus '/usr/bin/mixerctl outputs.master=-5,-5'
bind-key SM-minus '/usr/bin/mixerctl outputs.master=-5,-5'
# quickly switch between groups / virtual desktops
bind-key M-1 group-only-1
bind-key M-2 group-only-2
bind-key M-3 group-only-3
bind-key M-4 group-only-4
bind-key M-5 group-only-5
bind-key M-6 group-only-6
bind-key M-7 group-only-7
bind-key M-8 group-only-8
bind-key M-9 group-only-9
