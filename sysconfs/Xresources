! OpenBSD: /etc/X11/xenodm/Xresources, see xenodm(1)
!
! nota bene:     The geometry specified below is calibrated
!                  to a 1920x1080 display.
! calculation:
!                xlogin.Login.x: SCREENWIDTH/2 - xlogin.Login.width
!                xlogin.Login.y: (SCREENHEIGHT - xlogin.Login.height)/2


xlogin*login.translations: #override \
        Ctrl<Key>R: abort-display()\n\
        <Key>F1: set-session-argument(failsafe) finish-field()\n\
        <Key>Left: move-backward-character()\n\
        <Key>Right: move-forward-character()\n\
        <Key>Home: move-to-begining()\n\
        <Key>End: move-to-end()\n\
        Ctrl<Key>KP_Enter: set-session-argument(failsafe) finish-field()\n\
        <Key>KP_Enter: set-session-argument() finish-field()\n\
        Ctrl<Key>Return: set-session-argument(failsafe) finish-field()\n\
        <Key>Return: set-session-argument() finish-field()

! login prompt text
xlogin.Login.greeting:
xlogin.Login.namePrompt:
xlogin.Login.passwdPrompt:
xlogin.Login.fail: Login incorrect or forbidden
xlogin.Login.echoPasswd: true
xlogin.Login.echoPasswdChar: '*'

! disallow graphical root login
xlogin.Login.allowRootLogin: false

! login dialogue geometry
xlogin.Login.Height:            120
xlogin.Login.Width:             260
xlogin.Login.x:                 700
xlogin.Login.y:                 480
xlogin*borderWidth:             0
xlogin.Login.frameWidth:        0
xlogin.Login.innerFramesWidth:  0
xlogin.Login.sepWidth:          0

! fonts
xlogin.Login.face:              DejaVu Sans Mono-14
xlogin.Login.failFace:          DejaVu Sans Mono-18:bold
xlogin.Login.greetFace:         DejaVu Sans Mono-0
xlogin.Login.promptFace:        DejaVu Sans Mono-18

! colours
#define WHITE                   #EDF6E6
#define BLACK                   #252123
#define RED                     #DA9B9A
#define BLUE                    #7AADD9
#define BROWN                   #6E6967
#define DKBROWN                 #54504F
#define DKBLUE                  #6187AD
#define GREY                    #54697F
#define DKGREY                  #4A566B

xlogin.Login.background:        BLACK
xlogin.Login.failColor:         RED
xlogin.Login.foreground:        WHITE
xlogin.Login.greetColor:        WHITE
xlogin.Login.inpColor:          BLACK
xlogin.Login.promptColor:       WHITE
xlogin.Login.hiColor:           WHITE
xlogin.Login.shdColor:          WHITE

! clock
xclock.Clock.analog:            false
xclock.Clock.chime:             false
xclock.Clock.render:            true
xclock.Clock.twentyfour:        true
xclock.Clock.update:            10
xclock*background:              BLACK
xclock*borderWidth:             0
xclock*foreground:              WHITE
