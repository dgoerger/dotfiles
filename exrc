" ~/.exrc, see vi(1)
"
" enable autoindent
set autoindent
" enable extended regular expressions
set extended
" flash on error instead of keyboard beep
set flash
" case-insensitive regex, lowercase input only
set iclower
" disable mesg
set nomesg
" display row/column in the status bar
set ruler
" incremental search
set searchincr
" disable access to external programs
set secure
" highlight matching parens
set showmatch
" show mode in status bar
set showmode
" print helpful messages (e.g. 4 lines yanked)
set report=1
